{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "composite": true,
    "outDir": "dist/node",
    "emitDeclarationOnly": true,
    "allowJs": true,
    "types": ["node"],
  },
  "exclude": [
    "**/node_modules/**/*",
    "dist/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/.*/**/*.test.ts",
    "**/.*/**/*.test.tsx",
  ],
  "include": [
    "**/.*/**/*.ts",
    // "*.ts", 
    "scripts/**/*",
    "server/**/*",
    "types/node/**/*",
    ".devcontainer/**/*", 
    "postcss.config.cjs",
    "*.config.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ]
}