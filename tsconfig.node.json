{
  // "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "tests/*": [
        "./tests/*"
      ],
      "scripts/*": [
        "./scripts/*"
      ],
      "server/*": [
        "./server/*"
      ],
    },
  },
  "exclude": [
    "node_modules", "**/node_modules/*"
  ],
  "include": [
    "vite.config.ts",
    "./scripts",
    "./server",
    "./tests",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
}