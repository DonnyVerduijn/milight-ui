{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "noErrorTruncation": true,
    "allowImportingTsExtensions": true,
    "exactOptionalPropertyTypes": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "types": [
      "node",
      "vitest/globals",
    ],
    "baseUrl": ".",
    "plugins": [
      {
        "name": "@styled/typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "label"
          ]
        }
      }
    ],
    "paths": {
      "*": [
        "./src/*",
        "./types/*"
      ],
      "tests/*": [
        "./tests/*"
      ],
      "scripts/*": [
        "./scripts/*"
      ],
      "server/*": [
        "./server/*"
      ],
    },
  },
  "exclude": [
    "**/node_modules",
  ],
  "include": [
    "./src/**/*",
    "**/.*/**/*",
    "./*.ts", 
    "./scripts/**/*",
    "./server/**/*",
    "./tests/**/*",
    "./types/node/**/*",
    // because we import components in tests
    "./types/app/**/*",
    "./public/**/*",
  ],
}