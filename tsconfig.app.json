{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "bundler",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "composite": true,
    "outDir": "dist/app",
    "emitDeclarationOnly": true,
  },
  "include": [
    "./src/**/*",
    // we currently have no separate tsconfig for storybook etc.
    "./.*/**/*.tsx",
    // so we can borrow the server types
    // "./server/**/*",
    "./types/app/**/*",
    "./public/**/*",
    "./public/**/*.json",
  ],
  "exclude": [
    "**/node_modules",
    "dist/**/*",
    // "./server/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/.*/**/*.test.ts",
    "**/.*/**/*.test.tsx",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}