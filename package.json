{
  "name": "milight-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "postinstall": "patch-package && yarn api:generate",
    "api:generate": "rm -rf ./src/__generated && tsx -e \"import { generate } from './scripts/api-gen'; generate('./openapi.yml', './src/__generated/api');\"",
    "dev": "vite",
    "build": "rm -rf dist && vite build",
    "lint": "tsx -e \"import { lint } from './scripts/lint'; lint(['tsc', 'eslint ./**/*.{js,cjs,ts,tsx}','stylelint \"src/**/*.{css,tsx}\"']);\"",
    "lint:fix": "eslint ./**/*.{js,cjs,ts,tsx} --fix && stylelint \"src/**/*.{css,tsx}\" --fix",
    "preview": "yarn build && NODE_NO_WARNINGS=1 tsx -e \"import { viewStatic } from './scripts/browser'; viewStatic('./dist');\"",
    "test": "vitest --ui",
    "test:e2e": "npx --yes tsx --watch ./.devcontainer/launch.ts",
    "analyze": "yarn build && NODE_NO_WARNINGS=1 tsx -e \"import { viewStatic } from './scripts/browser'; viewStatic('./.analyzer');\"",
    "clean": "rm -rf dist .vite-inspect .analyzer .swc yarn-error.log ./src/__generated",
    "reset": "yarn clean && rm -rf node_modules /home/vscode/.cache ",
    "ci:local": "act -P ubuntu-latest=-self-hosted -j build --cache-server-addr 0.0.0.0",
    "dep:stats": "npx --yes tsx -e \"import { view } from './scripts/dep-stats'; view('./package.json');\""
  },
  "dependencies": {
    "@effect/platform": "^0.65.1",
    "@effect/schema": "^0.73.0",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^6.1.0",
    "@mui/material": "^6.1.0",
    "@trpc/client": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "culori": "^4.0.1",
    "dayjs": "^1.11.11",
    "effect": "^3.8.0",
    "mobx": "^6.12.3",
    "mobx-react-lite": "^4.0.7",
    "mobx-utils": "^6.0.8",
    "moize": "^6.1.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^6.26.2",
    "react-use": "^17.5.0",
    "remeda": "^2.12.1",
    "scheduler": "^0.23.2",
    "uuid": "^10.0.0",
    "ws": "^8.17.0",
    "xstate": "^5.17.4"
  },
  "devDependencies": {
    "@emotion/eslint-plugin": "^11.11.0",
    "@faker-js/faker": "^9.0.0",
    "@hey-api/client-fetch": "^0.2.4",
    "@hey-api/openapi-ts": "^0.53.0",
    "@puppeteer/browsers": "^2.2.3",
    "@styled/typescript-styled-plugin": "^1.0.1",
    "@swc/plugin-emotion": "^4.0.1",
    "@testing-library/dom": "^10.2.0",
    "@testing-library/react": "^16.0.0",
    "@types/culori": "^2.1.0",
    "@types/http-server": "^0.12.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.6",
    "@types/react-dom": "^18.2.22",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "@vitest/ui": "^2.1.1",
    "axios": "^1.6.8",
    "chalk": "^5.3.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-perf": "^3.3.2",
    "eslint-plugin-react-refresh": "^0.4.12",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
