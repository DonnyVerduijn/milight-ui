{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "outDir": "dist/storybook",
    "moduleResolution": "Bundler",
    "emitDeclarationOnly": true,
    "composite": true,
    "types": ["node", "vite/client"],
  },
  "exclude": [
    "**/node_modules/**/*",
    "dist/**/*",
  ],
  "include": [
    "./src/**/*.stories.ts",
    "./src/**/*.stories.tsx",
    "**/.storybook/**/*",
    "./stories/**/*",
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ]
}