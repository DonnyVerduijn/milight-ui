{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "outDir": "dist/test",
    "moduleResolution": "Bundler",
    "emitDeclarationOnly": true,
    "composite": true,
    "types": [
      "node",
      "vitest/globals",
    ],
  },
  "exclude": [
    "**/node_modules/**/*",
    "dist/**/*",
  ],
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "**/.*/**/*.test.ts",
    "**/.*/**/*.test.tsx",
    "tests/**/*",
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.storybook.json"
    }
  ]
}